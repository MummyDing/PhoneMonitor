<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.mummyding.phonemonitor.Control_View"
    android:background="#DFE1E0"
    >

    <TextView
        android:id="@+id/control_text"
        android:text="主控模式"
        android:textSize="30dip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/location_btn"
        android:text="定位"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/control_text"
        android:layout_marginTop="70dip"
        android:layout_width="200dip"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/call_back_btn"
        android:text="回拨"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/location_btn"
        android:layout_marginTop="40dip"
        android:layout_width="200dip"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/vibration_btn"
        android:text="振动"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/call_back"
        android:layout_marginTop="40dip"
        android:layout_width="200dip"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/ring_btn"
        android:text="响铃"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/vibration_btn"
        android:layout_marginTop="40dip"
        android:layout_width="200dip"
        android:layout_height="wrap_content" />
</RelativeLayout>
